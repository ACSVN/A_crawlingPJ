    var href=(document.location.href.toLowerCase()+'?').split('?');
    if((href[0]=='https://japanese.engadget.com' || href[0]=='https://japanese.engadget.com/')) {
    	if ( ! /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
			try{
	    		var node=document.getElementById('ATF-Right')
	    		var divheight=node.clientHeight;
	    		node=node.parentNode.nextSibling.childNodes[0];
	    		if (node.tagName='li'){
	    			if (divheight>300) {
		    			node.style="display:none";
		    			console.log('hide module (height:'+divheight+'px)')
		    		}
	    		}
	    	} catch(ex){}
	    }
    }