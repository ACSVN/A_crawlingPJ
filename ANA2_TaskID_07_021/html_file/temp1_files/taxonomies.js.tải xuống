"use strict";var taxonomies=function(){$.when(function(e,a){var t=$.Deferred();return $.ajax({url:"/api/taxonomies",type:"get",timeout:5e3,cache:!0,success:t.resolve,error:t.reject}),t.promise()}()).always(function(e){for(var a=e,t=0;t<a.length;t++){var o=a[t],n=o.latest_article,s=o.taxonomy;if(""!=s.slug){var i=n;if(""==i)continue;var r=!1;if(void 0!==i.taxonomies&&void 0!==i.taxonomies.tag)for(var l=0;l<i.taxonomies.tag.length;l++){var m=i.taxonomies.tag[l];"video"==m.slug.toLowerCase()&&!0}if(void 0!==i.taxonomies&&void 0!==i.taxonomies.category)for(var g=0;g<i.taxonomies.category.length;g++){var c=i.taxonomies.category[g];"video"==c.slug.toLowerCase()&&!0}if(void 0!==i.taxonomies&&void 0!==i.taxonomies.article_type)for(var v=0;v<i.taxonomies.article_type.length;v++){var h=i.taxonomies.article_type[v];"sponsored"==h.slug.toLowerCase()&&(r=!0)}var d=[];if(void 0!==i.taxonomies&&void 0!==i.taxonomies.mediagene_site)for(var y=0;y<i.taxonomies.mediagene_site.length;y++){var u=i.taxonomies.mediagene_site[y];d.push(u.name)}var C=i.thumbnail.src||"/assets/common/img/GIZMODO_OGP.png";"/assets/common/img/GIZMODO_OGP.png"===C?(i.thumbnail.width=1200,i.thumbnail.height=600):C=C.replace(/\.([a-zA-Z]+)?$/,"-w320.$1");i.thumbnail.width/i.thumbnail.height>1.6&&1.3;var p=i.pub_date.split(" "),b=p[0].replace(/-/g,"."),_=p[1];switch(s.taxonomy_type_key){case"category":$(".h-body-navContentCategoryItem[data-categorysub="+s.slug+"]").append($('\n<article class="h-body-navContentCategoryPost">\n    <div class="h-body-navContentCategoryHeading"><a href="/category/'+s.slug+'/">'+s.name+'</a>\n    </div>\n    <p class="h-body-navContentCategoryImage"><a href="'+i.link.href+'"><img src="'+C+'" alt="'+i.summary_title+'"></a></p>\n    <div class="h-body-navContentCategoryContainer">\n        <h3 class="h-body-navContentCategoryTitle"><a href="'+i.link.href+'">'+i.summary_title+'</a>\n        </h3>\n        <ul class="h-body-navContentCategoryAssist">\n            <li class="h-body-navContentCategoryAssistTime"<time datetime="'+p[0]+"T"+_+':00Z">'+b+'</time></li>\n        </ul>\n        <ul class="h-body-navContentCategoryAssist">\n            '+(1==r?'<li class="h-body-navContentCategoryAssistSponsored">Sponsored</li>':"")+"\n            "+(d.length>0?'<li class="h-body-navContentCategoryAssistAuthor">'+d.join(", ")+"</li>":"")+"\n        </ul>\n    </div>\n</article>\n"));break;case"issue":void 0!==s.meta.bg_image&&void 0!==s.meta.bg_image.src&&(C=s.meta.bg_image.src||"/assets/common/img/GIZMODO_OGP.png","/assets/common/img/GIZMODO_OGP.png"!==C&&(C=C.replace(/\.([a-zA-Z]+)?$/,"-w320.$1")),$(".h-body-navContentFeatureList").append($('\n<li class="h-body-navContentFeatureItem">\n    <a href="'+issuePathBase.replace(/______/,s.full_slug)+'">\n        <p class=" h-body-navContentFeatureImage"><img src="'+C+'" alt="'+s.name+'"></p>\n        <h3 class=" h-body-navContentFeatureTitle">'+s.name+"</h3>\n    </a>\n</li>\n")))}}}})};taxonomies();